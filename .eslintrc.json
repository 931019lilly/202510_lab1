{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-eval": "error",
    "no-implied-eval": "error",
    "eqeqeq": ["error", "always"],
    "curly": "error",
    "no-unused-vars": ["warn", { "args": "none", "vars": "local" }],
    "no-console": ["warn", { "allow": ["warn", "error", "log"] }]
  }
}
